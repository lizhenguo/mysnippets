snippet bstaccordion "bootstrap accordion" b
<section class="panel-group" id="${1:accordion}">
  <div class="panel panel-default">
    <div class="panel-heading" id="${2:panel_heading}">
      <${3:h4} class="panel-title">
        <a data-toggle="collapse" data-parent="#$1" href="#$5">${4:panel-title}</a>
      </h4>
    </div>
    <div id="${5:panel_content_id}" class="panel-collapse collapse in">
      <div class="panel-body">
        ${6:panel-body-content}
      </div>
    </div>
  </div>
</section>$0
endsnippet

