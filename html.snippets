snippet bstdropdown "bootstrap dropdown, not html <select> dropdown" b
<!-- NOTE: There must be counterpart JQuery function after where JQuery.js is
loadedto make the bootstrap dropdown to work. -->
<div class="dropdown">
	<button class="btn btn-default dropdown-toggle" data-toggle="dropdown">
		${1:Choose One...}
		<span class="caret"></span>
	</button>
	<ul class="dropdown-menu ${2:thenumbers}">
		<li value="${3:one}"><a href="${4:#}">${5:Item 1}</a></li>$6
	</ul>
</div>
<!-- NOTE: The hidden input is needed to get the dropdown selected value. -->
<input type='hidden' name='$2'>$0
endsnippet

snippet bstdropdowndisplay "bootstrap dropdown to display the selected item" b
<!-- Refer to https://stackoverflow.com/a/37995903/6099429 -->
$(".dropdown-menu li a").click(function() {
  $(this).parents(".dropdown").find('.btn').html($(this).text() + ' <span class="caret"></span>');
  $(this).parents(".dropdown").find('.btn').val($(this).data('value'));
});$0
endsnippet

snippet bstdropdownpassvalue "bootstrap dropdown to post the selected value" b
<!-- Refer to https://stackoverflow.com/a/38900933/6099429 -->
$(function(){
	//Listen for a click on any of the dropdown items
	$("${1:.thenumbers} li").click(function(){
		//Get the value
		var value = $(this).attr("value");
		//Put the retrieved value into the hidden input
		$("input[name='thenumbers']").val(value);
	});
});$0
endsnippet
